{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.lib.tsbuildinfo",

    /* Build output */
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "./src"
  },

  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.stories.ts"]
}
